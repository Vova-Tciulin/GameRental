@model UserLoginModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

@section Link
{
    <link rel="stylesheet" href="~/css/form.css">
}



<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5 "  tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Вход</h1>
                <a asp-action="Index" asp-controller="Home"  class="btn-close"  aria-label="Close"></a>
            </div>

            <div class="modal-body p-5 pt-0">
                <form asp-action="Login" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Почта</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Пароль</label>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-check text-start my-3">
                        <input class="form-check-input" asp-for="RememberMe" type="checkbox"  id="flexCheckDefault">
                        <label class="form-check-label" asp-for="RememberMe">
                            Запомнить меня?
                        </label>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Вход</button>
                    <hr class="my-4">
                    <div >
                        <p><a asp-action="ForgotPassword">Забыли пароль?</a></p>
                        <p><a asp-action="Register">Нет аккаунта? Регистрация.</a></p>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>

@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        
    }
</div>







